<% if @goal.errors.any? %>
    <p><em><%= @goal.errors.full_messages %></em></p>
<% end %>

<%= form_with model: [@bucketlist, @goal], local: true do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :accomplished, "Have You Accomplished This Goal?" %><br>
    <%= f.check_box :accomplished, {unchecked:false, checked:true} %><br><br>

    <%= f.submit "Update Goal" %>
<% end %>
<br>
<h3><%= link_to "Return to Your Bucket", bucket_list_path(@bucketlist) %></h3>